@model IEnumerable<MyCV_Demo.Models.GalleryResultModel>
<h1>Gallery</h1>
@if (Model == null)
{
    <p>No images uploaded yet.</p>
    <p><a asp-action="UploadImage">Upload Image</a></p>
}

else
{
    <p><a asp-action="UploadImage">Upload Image</a></p>
    <div>
        @foreach(var item in Model)
        {
            <div style="margin-bottom:20px;">
                <h3>@item.Title</h3>
                <p>@item.Description</p>
                <img src="@Url.Content(item.ImagePath)" alt="@item.Title" style="width:300px; height:300px; object-fit:contain" />
                <form asp-action="DeleteImage" method="post" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this image?');">
                        Delete
                    </button>
                </form>
            </div>
        }
    </div>
}